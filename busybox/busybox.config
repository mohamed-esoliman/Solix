# Minimal static BusyBox config for initramfs
CONFIG_STATIC=y
CONFIG_BUSYBOX=y
CONFIG_FEATURE_HAVE_RPC=n
CONFIG_FEATURE_IPV6=n

# Applets used during early boot
CONFIG_SH=y
CONFIG_ASH=y
CONFIG_ASH_ECHO=y
CONFIG_ASH_JOB_CONTROL=y
CONFIG_ASH_ALIAS=y
CONFIG_ASH_GETOPTS=y
CONFIG_ASH_CMDCMD=y
CONFIG_ASH_BUILTIN_ECHO=y
CONFIG_ASH_BUILTIN_TEST=y

CONFIG_LS=y
CONFIG_MKDIR=y
CONFIG_MKNOD=y
CONFIG_MOUNT=y
CONFIG_UMOUNT=y
CONFIG_CP=y
CONFIG_CHMOD=y
CONFIG_CHOWN=y
CONFIG_ECHO=y
CONFIG_CAT=y
CONFIG_DMESG=y
CONFIG_UNAME=y
CONFIG_SED=y
CONFIG_GREP=y
CONFIG_AWK=y
CONFIG_TAR=y
CONFIG_GZIP=y
CONFIG_CPIO=y
CONFIG_SWITCH_ROOT=y
# init + getty for persistent root
CONFIG_INIT=y
CONFIG_FEATURE_USE_INITTAB=y
CONFIG_GETTY=y
CONFIG_LOGIN=y
CONFIG_FEATURE_SECURETTY=y
CONFIG_FEATURE_SHADOWPASSWDS=y
CONFIG_KMESG=y
CONFIG_SYSLOGD=y
CONFIG_KLOGD=y
CONFIG_PRINTF=y
CONFIG_SLEEP=y
CONFIG_STTY=y
CONFIG_CLEAR=y
CONFIG_MORE=y
CONFIG_LESS=y
CONFIG_HEAD=y
CONFIG_TAIL=y
CONFIG_FIND=y
CONFIG_RM=y
CONFIG_TOUCH=y
CONFIG_PWD=y
CONFIG_CD=y
CONFIG_TRUE=y
CONFIG_FALSE=y
CONFIG_TEST=y
CONFIG_DF=y
CONFIG_FREE=y

# Networking (optional)
CONFIG_IP=y
CONFIG_IFCONFIG=y
CONFIG_PING=y
CONFIG_DHCPD=n
CONFIG_UDHCPC=y
CONFIG_UDHCPC_DEFAULT_SCRIPT="/etc/udhcpc.script"
CONFIG_IPADDR=y
CONFIG_IPLINK=y


